}

.column {
  background-color: #ffffff;
  padding: 20px;
  text-align: center;
}

/* Second and Fourth Row - spans 3 columns */
.span-3 {
  grid-column: 1 / span 3;
}

/* Fifth to Eighth Row - full-width columns */
.full-width {
  grid-column: 1 / -1;
}

.column h2 {
  font-size: 24px;
  margin-bottom: 10px;
  margin-top:-10px;
}

.column p {
  font-size: 16px;
  margin-bottom: 5px;
}
    </style>
</head>
